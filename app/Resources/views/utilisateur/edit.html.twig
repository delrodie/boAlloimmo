{% extends 'backend_layout.html.twig' %}

{% block title %}Modification des utilisateurs{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="page-title">
            <h4 class="mb-0">
                Gestion des Utilisateurs
                <small> </small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item active">Modification des utilisateurs</li>
            </ol>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-right">
                    <a href="{{ path('backend_utilisateur_index') }}" class="btn  btn-light"><i class="fa fa-list"></i> Liste des utilisateurs</a>
                </div>
                <br>
                <div class="col-md-12">
                    <div class="card card-shadow mb-4">
                        <div class="card-header">
                            <div class="card-title">
                                Modification des utilisateurs
                            </div>
                        </div>
                        <div class="card-body">
                            {{ form_start(edit_form, {'attr': {'class': 'right-text-label-form', 'id':'signupForm'}}) }}

                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label for="" class="control-label">Type</label>
                                    {{ form_widget(edit_form.type) }}
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label" for="titre">Nom</label>
                                    {{ form_widget(edit_form.nom) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label for="" class="control-label">Telephone</label>
                                    {{ form_widget(edit_form.telephone) }}
                                </div>
                                <div class="col-sm-6">
                                    <label for="" class="control-label">Adresse</label>
                                    {{ form_widget(edit_form.adresse) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <label for="" class="control-label">Website</label>
                                            {{ form_widget(edit_form.website) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">.</div>
                                    </div>
                                    <div class="row">
                                        {% if (utilisateur.imageName) %}
                                            <div class="col-sm-4">
                                                <img src="{{ vich_uploader_asset(utilisateur, 'imageFile') }}" alt="{{ utilisateur.nom }}" title="{{ utilisateur.nom }}"  class="card-img-top img-fluid"/>
                                            </div>
                                        {% endif %}
                                        <div class="col-sm-6 col-sm-offset-1">
                                            {{ form_widget(edit_form.imageFile) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label for="" class="control-label">Decription</label>
                                    {{ form_widget(edit_form.description) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-5 col-sm-offset-2">.</div>
                                {% if (utilisateur.statut) %}
                                    <label class="custom-control custom-checkbox">
                                        {{ form_widget(edit_form.statut) }}
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description">Compte désactivé (Décochez pour activer)</span>
                                    </label>
                                {% else %}
                                    <label class="custom-control custom-checkbox">
                                        {{ form_widget(edit_form.statut) }}
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description">Compte activé (cochez pour désactiver)</span>
                                    </label>
                                {% endif %}
                            </div>
                            {{ form_rest(edit_form) }}
                            <div class="form-group row">
                                <div class="col-sm-5 ml-auto">
                                    <button class="btn btn-primary" name="signup">Modifier</button>
                                </div>
                            </div>
                            {{ form_end(edit_form) }}
                            <div class="text-right">
                                {{ form_start(delete_form, {'attr': {'onsubmit': "return confirm('Etes-vous sûr de vouloir vraiment supprimer cet utilisateur?');"}}) }}
                                <input type="submit" value="Supprimer" class="btn btn-danger">
                                {{ form_end(delete_form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


