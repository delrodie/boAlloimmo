            "author": {
                "@type": "Person",
                "name": "Delrodie AMOIKON"
            },
            "publisher": {
                "@type": "Organization",
                "name": "Allo Immo",
                "logo": {
                    "@type": "ImageObject",
                    "url": "http://alloimmo.ci/frontend/images/logo-ai.png"
                }
            },
            "description": "{{ immeuble.annonceBien.resume|raw }}"
        }
    </script>

    <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "Organization",
            "url": "http://www.alloimmo.ci",
            "contactPoint": [{
                "@type": "ContactPoint",
