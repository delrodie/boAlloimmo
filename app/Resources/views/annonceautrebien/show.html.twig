{% extends 'backend_layout.html.twig' %}

{% block title %}{{ annonceAutrebien.annoncebien.titre }}{% endblock %}

{% block body %}
	<div class="main-content">
		<div class="page-title">
			<h4 class="mb-0">
				Gestion des biens
				<small> </small>
			</h4>
			<ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
				<li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">Accueil</a></li>
				<li class="breadcrumb-item"> Bien</li>
				<li class="breadcrumb-item active"> {{ annonceAutrebien.annoncebien.typebien.libelle }}</li>
			</ol>
		</div>

		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12 text-right">
					<a href="{{ path('backend_bien_index') }}" class="btn  btn-light"><i class="fa fa-list"></i> Liste des biens</a>
				</div>
				<br>
				<div class="col-md-12">
					<div class="card card-shadow mb-4">
						<div class="card-header">
							<div class="card-title">
								{{ annonceAutrebien.annoncebien.titre }}
							</div>
						</div>
						<div class="card-body">
							<div class="form-group row">
								<div class="col-sm-6">
									<div class="row">
										<div class="col-sm-12">
											{% if (annonceAutrebien.annoncebien.imageName) %}
												<img src="{{ vich_uploader_asset(annonceAutrebien.annoncebien, 'imageFile') }}" alt="{{ annonceAutrebien.annoncebien.titre }}" title="{{ annonceAutrebien.annoncebien.titre }}"  class="card-img-top img-fluid"/>
											{% else %}
												<img src="{{ asset('frontend/images/icon-ai.png')}}" class="card-img-top img-fluid">
											{% endif %}
										</div>
									</div>

									<div class="row">
										<div class="col-sm-12" style="margin-top: 15px">
											{{ annonceAutrebien.annoncebien.description|raw }}
										</div>
									</div>

									<div class="row">
										<div class="col-sm-12" style="margin-top: 15px">
											<u>Partenaire</u> : <strong>{{ annonceAutrebien.annoncebien.utilisateur.nom }}</strong>
										</div>
									</div>
								</div>
								<div class="col-sm-6">
									<div class="row">
										<div class="col-sm-6">
											<label class="control-label" for="rubrique">Type du bien</label>
											<div class="elect2-container">
												<input type="text" class="form-control" value="{{ annonceAutrebien.annoncebien.typebien.libelle }}" readonly>
											</div>
										</div>
										<div class="col-sm-6" style="">
											<label class="control-label" for="rubrique">Titre du bien</label>
											<div class="elect2-container">
												<input type="text" class="form-control" value="{{ annonceAutrebien.annoncebien.titre }}" readonly>
											</div>
										</div>
										<div class="col-sm-6" style="margin-top:10px;">
											<label class="control-label" for="rubrique">Zone</label>
											<div class="elect2-container">
												<input type="text" class="form-control" value="{{ annonceAutrebien.annoncebien.zone }}" readonly>
											</div>
										</div>
										<div class="col-sm-6" style="margin-top:10px;">
											<label class="control-label" for="rubrique">Localisation</label>
											<div class="elect2-container">
												<input type="text" class="form-control" value="{{ annonceAutrebien.annoncebien.localisation }}" readonly>
											</div>
										</div>
										<div class="col-sm-6" style="margin-top:10px;">
											<label class="control-label" for="rubrique">Prix</label>
											<div class="elect2-container">
												<input type="text" class="form-control" value="{{ annonceAutrebien.annoncebien.prix|number_format(0,'','.') }} " readonly>
											</div>
										</div>
										<div class="col-sm-6" style="margin-top:10px;">
											<label class="control-label" for="rubrique">Mode</label>
											<div class="elect2-container">
												<input type="text" class="form-control" value="{{ annonceAutrebien.annoncebien.mode }} " readonly>
											</div>
										</div>
										<div class="col-sm-12" style="margin-top:10px;">
											<label class="control-label" for="rubrique">Superficie</label>
											<div class="elect2-container">
												<input type="text" class="form-control" value="{{ annonceAutrebien.superficie }} m2" readonly>
											</div>
										</div>
									</div>
								</div>
							</div>

							<div class="form-group row">
								<div class="col-sm-7 ml-auto text-right">
									<a class="btn btn-outline-dark" href="{{ path('backend_bien_edit', {'slug': annonceAutrebien.annoncebien.slug}) }}" >Modifier</a>
								</div>
								<div class="col-sm-3 text-left">
									<form action="{{ absolute_url(path('backend_annonce_delete')) }}" method="post" onsubmit="return confirm('Voulez-vous supprimer cette annonce?')">
										<input type="hidden" name="bien" value="{{ annonceAutrebien.annoncebien.id }}">
										<input type="hidden" name="crsf_annonce" value="AlloImmoHabitat!2019">
										<input type="submit" value="Supprimer" class="btn btn-primary">
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
