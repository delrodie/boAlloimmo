{% extends "base.html.twig" %}

{% block title %}
    Conseils & guides
{% endblock %}

{% block body %}
    <div class="section section-booking">
        <div class="booking-form-wrap">
            {{ render(url('rfrontend_principale')) }}
            <div class="booking-form-toggle d-md-none"><a href="tel:+225 03 25 54 47"><i class="icon-telephone"></i></a>
                <div class="js-booking-form-toggle"><span>Detail</span><span class="close-text js-close-text">CLOSE</span></div>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="container">
            <div class="title-wrap text-center">
                <h2 class="h1">Conseils & guides</h2>
            </div>
        </div>
        <div class="container" style="margin-bottom: 100px">
            <div class="row">
                <div class="col-md-8">
                    <div class="row special-grid">
                        {% for article in articles %}
                            <div class="col-sm-6 page">
                                <div class="special-card-2">
                                    <div class="special-card-2-photo">
                                        <a href="{{ path('frontend_page', {'rubrique': article.rubrique.slug, 'slug':article.slug}) }}">
                                            <img src="{{ vich_uploader_asset(article, 'imageFile') }}" class="img-fluid" alt="">
                                        </a>
                                    </div>
                                    <div class="special-card-2-info">
                                        <h5>
                                            <a href="{{ path('frontend_page', {'rubrique': article.rubrique.slug, 'slug':article.slug}) }}">
                                                {{ article.titre }}
                                            </a>
                                        </h5>
                                        <div class="row">
                                            <div class="col-md d-flex flex-column text-justify">
                                                {{ article.resume|raw }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {{ knp_pagination_render(articles) }}
                    <!--<ul class="pagination" style="margin-top: 50px">
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                    </ul>-->

                </div>
                <div class="col-md-4 mt-3 mt-md-0">
                    <ul class="slider-single list-unstyled js-slider-single">
                        {% for publicite in publicites %}
                            <li><img src="{{ vich_uploader_asset(publicite, 'imageFile') }}" alt="" class="img-fluid"></li>
                        {% endfor %}
                    </ul>

                    <div class="row" style="margin-top: 50px">
                        <div class="col-sm-12">
                            <h4>Nous suivre</h4>
                            <div class="sharethis-inline-follow-buttons"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .pagination{
            padding-top: 50px;
        }
        .page-link{
            font-size: 20px;
            font-weight: bold;
        }
        .page-item{
            border: solid 1px #CCCCCC;
        }
        .page-item:first-child{
            border-bottom-left-radius: 5px;
            border-top-left-radius: 5px;
        }
        .page-item:last-child{
            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://platform-api.sharethis.com/js/sharethis.js#property=5d129b1ca0d27e001207a599&product=inline-share-buttons"></script>

{% endblock %}