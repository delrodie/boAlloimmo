{% extends "base.html.twig" %}

{% block title %}
    Nous contacter
{% endblock %}

{% block body %}
    <div class="section section-booking">
        <div class="booking-form-wrap">
            {{ render(url('rfrontend_principale')) }}
            <div class="booking-form-toggle d-md-none"><a href="tel:+225 03 25 54 47"><i class="icon-telephone"></i></a>
                <div class="js-booking-form-toggle"><span>Detail</span><span class="close-text js-close-text">CLOSE</span></div>
            </div>
        </div>
    </div>
    
		<div class="section">
			<div class="container">
				<div class="title-wrap text-center">
					<h1>Contacts</h1>
					
            
            {% if (app.flashes('notice')) %}
            <div class="modal fade" id="overlay">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title text-center">Votre message a été envoyé avec succès! </h4>
                    </div>
                    <div class="modal-body">
                        {% for message in app.flashes('notice') %}
                            <div class="flash-notice">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                    </div>
                </div>
            </div>
            {% endif %}
            
            {% if (app.flashes('erreur')) %}
            <div class="modal fade" id="overlay">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title text-center">Oups!! votre message n'a pas être envoyé, veuillez réessayer plutard! </h4>
                    </div>
                    <div class="modal-body">
                        {% for message in app.flashes('erreur') %}
                            <div class="flash-notice">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                    </div>
                </div>
            </div>
            {% endif %}
				</div>
			</div>
		</div>
		<div class="section bg-grey mt-0">
			<div class="container">
				<div class="row">
					<div class="col-md-5 col-lg-5">
						<h2>Nous joindre</h2>
						<div class="row flex-md-column">
							<div class="col-sm col-md-auto">
								<ul class="icn-list mt-0 mt-sm-1 mt-xl-4">
									<li><i class="icon-placeholder"></i>Cocody Angré, Abidjan Cocody
										<br> Mahou Carrefour temple </li>
									<li><i class="icon-closed-envelope"></i><a href="mailto:info@alloimmo.ci">info@alloimmo.ci</a></li>
								</ul>
								<div class="mt-4"></div>
								<div class="messengers-list">
									<a href="https://facebook.com/alloimmoci" class="link-facebook" target="_blank">
										<i class="icon-facebook-logo" data-toggle="tooltip" data-placement="top" title="Facebook"></i>
									</a>
									<a href="https://twitter.com/alloimmoci" class="link-skype" target="_blank">
										<i class="icon-twitter-logo" data-toggle="tooltip" data-placement="top" title="Twitter"></i>
									</a>
									<a href="https://www.instagram.com/alloimmoci/" class="link-instagram" target="_blank">
										<i class="icon-instagram-logo" data-toggle="tooltip" data-placement="top" title="Instagram"></i>
									</a>
								</div>
							</div>
							<div class="col-sm col-md-auto mt-3 mt-sm-0 mt-md-4">
								<h4 class="mb-1">Assistance</h4>
								<ul class="icn-list">
									<li><i class="icon-telephone"></i>+225 75 83 33 75</li>
									<li><i class="icon-time"></i>Lundi - vendredi: <b>08:00 - 17h30</b>
										<br>Samedi: <b>08h - 12h30</b></li>
								</ul>
								<div class="mt-15 mt-md-3"></div>
								<h4 class="mb-1">Marketing</h4>
								<ul class="icn-list">
									<li><i class="icon-telephone"></i>+225 75 83 33 75</li>
								</ul>
								<div class="mt-15 mt-md-3"></div>
								<h4 class="mb-1">Partenariat </h4>
								<ul class="icn-list">
									<li><i class="icon-telephone"></i>+225 75 83 33 75</li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-md-6 col-lg-6 mt-5 mt-md-0">
						<h2>Formulaire</h2>
						<form action="{{ path('frontend_contact_mail') }}" class="contact-form" id="contactForm" method="post" novalidate="novalidate">
							<div class="successform">
								<p>Message envoyé avec succès!</p>
							</div>
							<div class="errorform">
								<p>Echec! Veuillez reessayer plutard.</p>
							</div>
							<div class="mt-15">
								<input type="text" class="form-control" name="Nom" placeholder="Votre nom & prenoms*" required="required">
							</div>
							<div class="mt-15">
								<input type="email" class="form-control" name="Email" placeholder="Email*" required="required">
							</div>
							<div class="mt-15">
								<input type="text" class="form-control" name="Phone" placeholder="Phone">
							</div>
							<div class="mt-15">
								<textarea class="form-control" name="Message" placeholder="Message" required="required"></textarea>
							</div>
							<div class="mt-3">
								<button type="submit" class="btn btn-primary">Envoyer</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('#overlay').modal('show');

        setTimeout(function() {
            $('#overlay').modal('hide');
        }, 5000);
    </script>
{% endblock %}
