                "contactType": "Direction",
                "contactOption": "TollFree",
                "areaServed": "FR"
            },{
                "@type": "ContactPoint",
                "telephone": "+225 75 83 33 75",
                "contactType": "Direction",
                "contactOption": "TollFree",
                "areaServed": [
