{% extends "base.html.twig" %}

{% block title %}
    Annuaire
{% endblock %}

{% block body %}
    <div class="section section-booking">
        <div class="booking-form-wrap">
            {{ render(url('rfrontend_principale')) }}
            <div class="booking-form-toggle d-md-none"><a href="tel:+225 03 25 54 47"><i class="icon-telephone"></i></a>
                <div class="js-booking-form-toggle"><span>Detail</span><span class="close-text js-close-text">CLOSE</span></div>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="container">
            <div class="title-wrap text-center">
                <h2 class="h1">Annuaire</h2>
            
                {% if (app.flashes('notice')) %}
                <div class="modal fade" id="overlay">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title text-center">Votre message a été envoyé avec succès! </h4>
                        </div>
                        <div class="modal-body">
                            {% for message in app.flashes('notice') %}
                                <div class="flash-notice">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>
                        </div>
                    </div>
                </div>
                {% endif %}
                
                {% if (app.flashes('erreur')) %}
                <div class="modal fade" id="overlay">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title text-center">Oups!! votre message n'a pas être envoyé, veuillez réessayer plutard! </h4>
                        </div>
                        <div class="modal-body">
                            {% for message in app.flashes('erreur') %}
                                <div class="flash-notice">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
        <div class="section mt-0 section-annuaire" style="margin-bottom: 50px;">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-12">
                        <div class="rating-box">
                            <div class="row mt-2 mt-md-5 special-grid">
                                {% for domaine in domaines %}
                                    <div class="col-md-3 col-sm-4 mt-1 mt-md-0">
                                        <div class="special-card-2 service-block service-liste">
                                            <div class="special-card-2-photo" style="background-color:{{ domaine.couleur }};">
                                                <span class="service-titre">
                                                    {{ domaine.libelle }}
                                                    <span class="badge-domaine">
                                                        {{ render(url('fnombre_partenaire_domaine', {'domaine': domaine.id})) }}
                                                    </span>
                                                </span>
                                            </div>
                                            <div class="special-card-2-info">
                                                {{ render(url('fannuaire_domaine', {'domaine': domaine.id})) }}
                                                {{ render(url('fannuaire_compteur_service', {'domaine': domaine.id})) }}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section">
            <div class="container">
                {% if (promotions|length > 2) %}
                    <div class="row d-flex room-carousel js-room-carousel">
                        {% for promotion in promotions %}
                            <div class="col-6">
                                <div class="room-card">
                                    <div class="room-card-photo">
                                        <img src="{{ asset('uploads/biens/'~ promotions.imageName) | imagine_filter('bienAccueil_thumb') }}" alt="{{ promotions.titre }}" class="img-fluid">
                                        <div class="flex-wrap-center">
                                            {% if (promotions.disponibilite) %}
                                                <a href="{{ path('frontend_bien', {'typebien': promotions.typebien.slug, 'slug': promotions.slug}) }}" class="btn btn-primary room-qview">Disponible</a>
                                            {% else %}
                                                <a href="{{ path('frontend_bien', {'typebien': promotions.typebien.slug, 'slug': promotions.slug}) }}" class="btn btn-primary room-qview">Non disponible</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="room-card-info">
                                        <div class="row">
                                            <div class="col">
                                                <h3 class="room-type">{{ promotion.typebien }}</h3>
                                            </div>
                                            <div class="col-auto ml-auto">
                                                <div class="room-card-attr">
                                                    <span data-toggle="popover" data-trigger="hover" data-placement="top" data-content="Offre promotionnelle"><i class="icon-star-black"></i></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="room-size mt-0" style="height: 100px;">
                                            {{ promotion.resume|raw }}
                                        </div>
                                        <div class="row">
                                          {% if promotion.affichagePrix and promotion.prix != 0 %}
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': promotion.typebien.slug, 'slug': promotion.slug}) }}" title="Voir les détails">
                                                <i class="fa fa-money"></i> <span class="">{{ promotion.prix|number_format(0,'','.') }} F</span>
                                              </a>
                                            </div>
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': promotion.typebien.slug, 'slug': promotion.slug}) }}" title="Voir les détails">
                                                <i class="fa fa-map-signs"></i> <span class="">{{ promotion.zone }}</span>
                                              </a>
                                            </div>
                                          {% elseif (promotion.prix == 0) %}
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': promotion.typebien.slug, 'slug': promotion.slug}) }}" title="Voir les details">
                                                <i class="fa fa-map-signs"></i> <span class="">{{ promotion.zone }}</span>
                                              </a>
                                            </div>
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': promotion.typebien.slug, 'slug': promotion.slug}) }}">
                                                <i class="fa fa-exclamation-circle"></i> <span class="">{{ promotion.mode }}</span>
                                              </a>
                                            </div>
                                          {% else %}
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': promotion.typebien.slug, 'slug': promotion.slug}) }}">
                                                <i class="fa fa-map-signs"></i> <span class="">{{ promotion.zone }}</span>
                                              </a>
                                            </div>
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': promotion.typebien.slug, 'slug': promotion.slug}) }}">
                                                <i class="fa fa-exclamation-circle"></i> <span class="">{{ promotion.mode }}</span>
                                              </a>
                                            </div>
                                          {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="row d-flex room-carousel js-room-carousel">
                        {% for bien in biens %}
                            <div class="col-6">
                                <div class="room-card">
                                    <div class="room-card-photo">
                                        <img src="{{ asset('uploads/biens/'~ bien.imageName) | imagine_filter('bienAccueil_thumb') }}" alt="{{ bien.titre }}" class="img-fluid">
                                        <div class="flex-wrap-center">
                                            {% if (bien.disponibilite) %}
                                                <a href="{{ path('frontend_bien', {'typebien': bien.typebien.slug, 'slug': bien.slug}) }}" class="btn btn-primary room-qview">Disponible</a>
                                            {% else %}
                                                <a href="{{ path('frontend_bien', {'typebien': bien.typebien.slug, 'slug': bien.slug}) }}" class="btn btn-primary room-qview">Non disponible</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="room-card-info">
                                        <div class="row">
                                            <div class="col">
                                                <h3 class="room-type">{{ bien.typebien }}</h3>
                                            </div>
                                            {% if (bien.promotion) %}
                                                <div class="col-auto ml-auto">
                                                    <div class="room-card-attr">
                                                        <span data-toggle="popover" data-trigger="hover" data-placement="top" data-content="Offre promotionnelle"><i class="icon-star-black"></i></span>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="room-size mt-0" style="height: 100px;">
                                            {{ bien.resume|raw }}
                                        </div>
                                        <div class="row">
                                          {% if bien.affichagePrix and bien.prix != 0 %}
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': bien.typebien.slug, 'slug': bien.slug}) }}" title="Voir les détails">
                                                <i class="fa fa-money"></i> <span class="">{{ bien.prix|number_format(0,'','.') }} FCFA</span>
                                              </a>
                                            </div>
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': bien.typebien.slug, 'slug': bien.slug}) }}" title="Voir les détails">
                                                <i class="fa fa-map-signs"></i> <span class="">{{ bien.zone }}</span>
                                              </a>
                                            </div>
                                          {% elseif (bien.prix == 0) %}
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': bien.typebien.slug, 'slug': bien.slug}) }}" title="Voir les details">
                                                <i class="fa fa-map-signs"></i> <span class="">{{ bien.zone }}</span>
                                              </a>
                                            </div>
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': bien.typebien.slug, 'slug': bien.slug}) }}">
                                                <i class="fa fa-exclamation-circle"></i> <span class="">{{ bien.mode }}</span>
                                              </a>
                                            </div>
                                          {% else %}
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': bien.typebien.slug, 'slug': bien.slug}) }}">
                                                <i class="fa fa-map-signs"></i> <span class="">{{ bien.zone }}</span>
                                              </a>
                                            </div>
                                            <div class="col room-information">
                                              <a href="{{ path('frontend_bien', {'typebien': bien.typebien.slug, 'slug': bien.slug}) }}">
                                                <i class="fa fa-exclamation-circle"></i> <span class="">{{ bien.mode }}</span>
                                              </a>
                                            </div>
                                          {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('#overlay').modal('show');

        setTimeout(function() {
            $('#overlay').modal('hide');
        }, 3000);
    </script>
{% endblock %}
