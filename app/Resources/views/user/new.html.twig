{% extends 'backend_layout.html.twig' %}

{% block title %}Enregistrement des modes{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="page-title">
            <h4 class="mb-0">
                Gestion des modes
                <small> </small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item active">Enregistrement des modes</li>
            </ol>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-right">
                    <a href="{{ path('backend_mode_index') }}" class="btn  btn-light"><i class="fa fa-list"></i> Liste des modes</a>
                </div>
                <br>
                <div class="col-md-12">
                    <div class="card card-shadow mb-4">
                        <div class="card-header">
                            <div class="card-title">
                                Enregistrement des modes
                            </div>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'class': 'right-text-label-form', 'id':'signupForm'}}) }}
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Partenaire</label>
                                <div class="col-sm-8">
                                    <select name="partenaire" id="partenaire" class="form-control">
                                        <option value="">-- Selectionnez le partenaire --</option>
                                        {% for partenaire in partenaires %}
                                            <option value="{{ partenaire.nom }}">{{ partenaire.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Nom utilisateur</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.username) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Adresse email</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.email) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Mot de passe</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.password) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Roles</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.roles) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-5 col-sm-offset-4">.</div>
                                <label class="custom-control custom-checkbox">
                                    {{ form_widget(form.enabled) }}
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Activ√©</span>
                                </label>
                            </div>
                            {{ form_rest(form) }}
                            <div class="form-group row">
                                <div class="col-sm-5 ml-auto">
                                    <button class="btn btn-primary" name="signup">Enregistrer</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

