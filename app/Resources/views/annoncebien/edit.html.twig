{% extends 'backend_layout.html.twig' %}

{% block title %}Modification du {{ annonceBien.titre }}{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="page-title">
            <h4 class="mb-0">
                Gestion des annonces des internautes
                <small> </small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item active">Modification du {{ annonceBien.titre }}</li>
            </ol>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-right">
                    <a href="{{ path('backend_annoncebien_index') }}" class="btn  btn-light"><i class="fa fa-list"></i> Liste des biens</a>
                </div>
                <br>
                <div class="col-md-12">
                    <div class="card card-shadow mb-4">
                        <div class="card-header">
                            <div class="card-title">
                                Modification du {{ annonceBien.titre }}
                            </div>
                        </div>
                        <div class="card-body">
                            {{ form_start(edit_form, {'attr': {'class': 'right-text-label-form', 'id':'signupForm'}}) }}
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="Partenaire">Partenaire</label>
                                <div class="col-sm-8 select2-container">
                                    {{ form_widget(edit_form.utilisateur) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="rubrique">Type de bien</label>
                                <div class="col-sm-8 select2-container">
                                    {{ form_widget(edit_form.typebien) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Titre</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.titre) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Prix</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.prix) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Mode</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.mode) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Zone</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.zone) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Localisation</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.localisation) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Dossier de la visite guidée</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.visite) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Visite guidée cubix</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.visiteCubix) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="Contenu">Description</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.description) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="tags">Mots clés</label>
                                <div class="col-sm-8 tags" style="color: #666666">
                                    {{ form_widget(edit_form.tags) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="tags">Photo d'illustration</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.imageFile) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3 col-sm-offset-0">.</div>
                                <label class="custom-control custom-checkbox">
                                    {{ form_widget(edit_form.affichagePrix) }}
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">
                                      {% if (annonceBien.affichagePrix) %}
                                          Ne plus afficher le prix de ce bien
                                      {% else %}
                                          Afficher le prix de ce bien
                                      {% endif %}
                                    </span>
                                </label>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3 col-sm-offset-0">.</div>
                                <label class="custom-control custom-checkbox">
                                    {{ form_widget(edit_form.disponibilite) }}
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Disponibilité</span>
                                </label>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3 col-sm-offset-0">.</div>
                                <label class="custom-control custom-checkbox">
                                    {{ form_widget(edit_form.statut) }}
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Statut</span>
                                </label>
                            </div>
                            {{ form_rest(edit_form) }}
                            <div class="form-group row">
                                <div class="col-sm-5 ml-auto">
                                    <input type="reset" class="btn btn-default" value="Annuler">
                                    <button class="btn btn-primary" name="signup">Suivant</button>
                                </div>
                            </div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('backend/vendor/select2/css/select2.css') }}" rel="stylesheet">
    <link href="{{ asset('backend/vendor/summernote/summernote-bs4.css') }}" rel="stylesheet">
    <link href="{{ asset('backend/vendor/date-picker/css/bootstrap-datepicker.min.css') }}" rel="stylesheet">
    <style>

        .bootstrap-tagsinput .tag {
            margin-right: 2px;
            color: #666666;
        }
    </style>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('backend/vendor/select2/js/select2.min.js') }}"></script>
    <script src="{{ asset('backend/vendor/summernote/summernote-bs4.min.js') }}"></script>
    <script src="{{ asset('backend/vendor/tagsinput/js/bootstrap-tagsinput.js') }}" type="text/javascript"></script>
    <script src="{{ asset('backend/vendor/date-picker/js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ asset('backend/vendor/date-picker-init.js') }}"></script>
        <script>
        $(document).ready(function () {
            $("#appbundle_annoncebien_typebien").select2();
            $(".select-typebien").select2();
            $(".select-zone").select2();
            $(".select-partenaire").select2();
            $("tag-input").tagsinput();
        })
    </script>
    <script>
        $(document).ready(function() {
            $('#appbundle_annoncebien_description').summernote({
                height: 200,                 // set editor height
                minHeight: null,             // set minimum height of editor
                maxHeight: null,             // set maximum height of editor
                focus: true                  // set focus to editable area after initializing summernote
            });
        });
    </script>
    <script>
        $('#sandbox-container input').datepicker({
            format: "yyyy-mm-dd",
            todayBtn: "linked",
            //clearBtn: true,
            language: "fr",
            multidate: false,
            autoclose: true
        });
        $('#sandbox-container input-daterange').datepicker({
            format: "dd/mm/yyyy",
            todayBtn: "linked",
            clearBtn: true,
            language: "fr",
            multidate: false,
            autoclose: true
        });
    </script>
{% endblock %}
