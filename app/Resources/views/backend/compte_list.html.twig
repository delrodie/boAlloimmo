{% extends 'backend_layout.html.twig' %}

{% block body %}
    <div class="main-content">
        <div class="page-title">
            <h4 class="mb-0">
                Gestion des comptes
                <small> </small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item active">Liste des comptes</li>
            </ol>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-right">
                    <a href="{{ path('admin_user_new') }}" class="btn  btn-light"><i class="fa fa-plus"></i> Ajouter un compte</a>
                </div>
                <br>
                <div class="col-md-12">
                    <div class="card card-shadow mb-4">
                        <div class="card-header">
                            <div class="card-title">
                                Liste des comptes
                            </div>
                        </div>
                        <div class="card-body">
                            <table id="liste-compte" class="table table-bordered table-striped" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th scope="col" class="text-center">ID</th>
                                    <th scope="col" class="text-center">Noms utilisateurs</th>
                                    <th scope="col" class="text-center">comptes</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for compte in comptes %}
                                    <tr>
                                        <th scope="col" class="text-right">{{ loop.index }}</th>
                                        <td>{{ compte.user }}</td>
                                        <td>{{ compte.partenaire }}</td>
                                        <td class="text-center">
                                            <a href="#"><i class="fa fa-edit"></i></a> |
                                            <a href="{{ path('backend_partenaire_show', {'slug': compte.user}) }}" title="Envoyer les paramÃ¨tres au partenaire"><i class="fa fa-send-o"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('backend/vendor/data-tables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('backend/vendor/data-tables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('backend/vendor/data-tables/dataTables.bootstrap4.min.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function() {
            $('#liste-compte').DataTable();
        } );
    </script>
{% endblock %}
